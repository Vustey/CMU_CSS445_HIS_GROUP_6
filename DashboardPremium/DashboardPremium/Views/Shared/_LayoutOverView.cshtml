<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- 4 câu lệnh dưới là import Bootstrap 4 framework -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        .home_button {
            width: 500px;
            height: 150px;
            font-size: x-large;
            color: white;
        }

        .bg-blue-sky {
            background-color: rgb(168, 217, 250);
        }

        .input-with-image {
            background-image: url('..\\Content\\Image\\Search_Icon.png');
            background-repeat: no-repeat;
            background-position: 10px center;
            /* Vị trí của hình ảnh */
            padding-left: 30px;
            /* Để cung cấp không gian cho hình ảnh và văn bản */
            padding-top: 5px;
            padding-bottom: 5px;
        }

        .n_link {
            text-decoration: none;
            /* Xóa gạch chân dưới */
            color: inherit;
            /* Sử dụng màu chữ mặc định của thẻ mẹ */
        }

        .n_link:hover {
            /* Xóa các thuộc tính hover */
            /* Ví dụ: */
            text-decoration: none;
            /* Xóa gạch chân dưới */
            color: inherit;
            /* Sử dụng màu chữ mặc định của thẻ mẹ */
        }
        .icon{
            height: 50px;
            width: auto;
        }
        .lg_rounded{
            border-radius: 10px;
        }
    </style>
    <title>Overview</title>
</head>

<body>
    <div class="row w-100">

        <!-- Đây là phần bên trái -->

        <div class="col-md-2 pr-0 " style="background-color: #262626;
        color: #ffffff;
        height: 100vh;
        ">

            <!-- Phần trên -->
            <div class="mt-4 d-flex align-items-center flex-column">
                <div class="container-fluid">
                    <div class="container-fluid">
                        @* Đây là tên và logo Dashboard *@
                        <p class="pt-3 pb-3" style="font-size: 15px;">
                            <img src="..\Content\Image\Dashboard_Logo.png" alt="">
                            Dashboard Premium
                        </p>
                        @* Đây là nút search *@
                        <input type="text" placeholder="Search for..." class="w-100 input-with-image mb-3 rounded"
                            style="height: 40px;">
                        @* Đây là nút Dashboard *@
                        <p class="d-flex align-items-center">
                            <img src="..\Content\Image\Dashboard_Icon_Inactive.png" alt="" class="pr-1">
                            @Html.ActionLink("Dashboard", "HomePageView", "Home", null, new
                                {
                                    @class = "n_link",
                                    @style
                                     = "font-size: 150%;"
                                })
                        </p>
                    </div>
                </div>
            </div>

            <!-- Phần dưới -->
            <div class="mt-1 d-flex align-items-center flex-column">
                <div class="container-fluid">
                    <div class="container-fluid">
                        @* nút overview *@
                        <button @* Câu lệnh onlick này là để biến cả button thành link *@
                            onclick="location.href='@Url.Action("TotalEarning", "Home")';"
                            class="mt-2 w-100 btn d-flex align-items-center p-0" style="background-color: #404040;
                                text-align: left;
                                color: #ffffff;
                                border-width: 0;
                            ">

                            <img src="..\Content\Image\Nav_background.png" alt="" class="pr-1 h-100 rounded"
                                style="padding-left: 0px;">
                            Over view
                        </button>
                        @* Nút alert *@
                        <p class="n_link mt-4">@Html.ActionLink("Alert", "Alert", "Home", null, new
                                {
                                    @class = "n_link"
                                })</p>
                    </div>
                </div>
            </div>

            <!-- Đường gạch ngang -->
            <div class="divider bg-dark" style="padding-top: 2px;"></div>




        </div>


        <!-- Đây là phần bên phải -->
        <div class="col-md-10 p-0">
            <div class="p-3 w-100">


                @* Bao bọc cả phần bên phải *@
                <div class="container-fluid jumbotron pt-2">
                    @* Phần navigation *@
                    <div class="row mt-3 mb-5">
                        <div class="col">
                            <h2 class="bg-white d-flex align-items-center lg_rounded" style="height: 100px; cursor: pointer;" onclick="location.href='@Url.Action("TotalEarning", "Home")';">
                                @* TotalEarning icon*@
                                <img class="icon pl-3 pr-2" src="..\Content\Image\TotalEarning_Icon.png" alt="">
                                Total Earning
                            </h2>
                        </div>
                        <div class="col">
                                @* Vacation Days icon *@
                            <h2 class="bg-white d-flex align-items-center lg_rounded" style="height: 100px; cursor: pointer;" onclick="location.href='@Url.Action("VacationDays", "Home")';">
                                <img class="icon pl-3 pr-2" src="..\Content\Image\VacationDays_Icon.png" alt="">
                                Vacation Days</h2>
                        </div>
                        <div class="col">
                                @* Average Benefit icon *@
                            <h2 class="bg-white d-flex align-items-center lg_rounded" style="height: 100px; cursor: pointer;" onclick="location.href='@Url.Action("AverageBenefit", "Home")';">
                                <img class="icon pl-3 pr-2" src="..\Content\Image\AverageBenefit_Icon.png" alt="">
                                Average Benefit
                            </h2>
                        </div>
                    </div>

                    @RenderBody()

                </div>
            </div>

        </div>
    </div>
</body>

</html>
