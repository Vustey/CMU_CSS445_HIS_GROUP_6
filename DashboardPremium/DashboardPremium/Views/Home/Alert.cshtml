@{
    Layout = "~/Views/Shared/_LayoutAlert.cshtml";
}
    <table class="table table-hover">
        @* Tiêu đề *@
        <h1>Alert</h1>
        @* Phần gạch ngang *@
        <div class="divider bg-dark mt-3" style="padding-top: 2px;"></div>
        @* Phần table *@
        @* Phần tiêu đề của table*@
        <thead>
            <tr class="table-active">
                <th class="ml-3 col-1">STT</th>
                <th class="ml- col-11">Alert content</th>
            </tr>
        </thead>
        @* phần nội dung của table *@

        <tbody class="bg-white">
            <tr data-toggle="modal" data-target="#HiringAnniversary">
                <td class="ml-3">
                    iconAlert
                </td>
                <td class="ml-3">
                    Hiring Anniversary
                </td>
            </tr>
            <tr data-toggle="modal" data-target="#VacationDays">
                <td class="ml-3">
                    iconAlert
                </td>
                <td class="ml-3">
                    Vacation days
                </td>
            </tr>
            <tr data-toggle="modal" data-target="#ChangeInPayroll">
                <td class="ml-3">
                    iconAlert
                </td>
                <td class="ml-3">
                    Change in payroll
                </td>
            </tr>
            <tr data-toggle="modal" data-target="#Birthdays">
                <td class="ml-3">
                    iconAlert
                </td>
                <td class="ml-3">
                    Birthdays
                </td>
            </tr>
        </tbody>
    </table>

    @* Modal Hirring *@
    <div class="modal fade" id="HiringAnniversary" tabindex="-1" role="dialog" aria-labelledby="HiringAnniversaryModelLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="HiringAnniversaryModelLabel">Modal title</h5>
