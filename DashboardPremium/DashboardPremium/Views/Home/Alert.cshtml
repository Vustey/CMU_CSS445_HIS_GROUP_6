                @* Phần gạch ngang *@
                <div class="divider bg-dark mt-3" style="padding-top: 2px;"></div>
                @* Phần table *@
                <table class="table table-hover">
                    @* Phần tiêu đề của table*@
                    <thead>
                    <tr class="table-active">
                        <th class="text-center ml-3">Firstname</th>
                        <th class="text-center ml-3">Lastname</th>
                        <th class="text-center ml-3">Email</th>
                    </tr>
                    </thead>
                    @* phần nội dung của table *@
                    <tbody>
                    @* Dòng 1 *@
                    <tr>
                        <td class="text-center ml-3">John</td>
